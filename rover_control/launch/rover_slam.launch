<launch>
  <arg name="database_path" default="~/.ros/rtabmap.db"/>
  <arg name="wait_for_transform" default="0.2"/>

  <group ns="rtabmap">

    <node pkg="nodelet" type="nodelet" name="rgbd_sync" args="standalone rtabmap_ros/rgbd_sync" output="screen">
      <remap from="rgb/image"       to="/camera/rgb/image_rect_color"/>
      <remap from="depth/image"     to="/camera/depth_registered/image_raw"/>
      <remap from="rgb/camera_info" to="/camera/rgb/camera_info"/>
      <remap from="rgbd_image"      to="rgbd_image"/> <param name="compressed_rate"  value="10"/>
      <param name="approx_sync"      value="true"/> 
    </node>

    <node pkg="rtabmap_ros" type="rgbd_odometry" name="rgbd_odometry" output="screen">
      <param name="frame_id"        value="base_link"/>
      <param name="publish_tf"      value="true"/> <remap from="rgbd_image"      to="rgbd_image"/>
      
      <param name="Reg/Force3DoF"    value="true"/> <param name="Vis/MinInliers"   value="15"/>
    </node>

    <node name="rtabmap" pkg="rtabmap_ros" type="rtabmap" output="screen" args="--delete_db_on_start">
      <param name="frame_id"        value="base_link"/>
      <param name="subscribe_depth" value="false"/>
      <param name="subscribe_rgbd"  value="true"/>
      <param name="database_path"   value="$(arg database_path)"/>

      <remap from="rgbd_image"      to="rgbd_image"/>
      <remap from="odom"            to="odom"/>

      <param name="Mem/IncrementalMemory" value="true"/>
      <param name="Mem/InitWMWithAllNodes" value="false"/>
    </node>

  </group>

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find rtabmap_ros)/launch/config/rgbd.rviz"/>

</launch>
